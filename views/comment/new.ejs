<%- include("../partials/header") %>

<div class="container">
    <h1 class="text-center mt-5">Add new comments to <%= campground.name %></h1>
    <div class="mt-3 mx-auto" style="width:30%">
        <form  action="/campgrounds/<%= campground._id %>/comment" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
        
            <div class="form-group ">
                <input type="submit" class="btn btn-primary btn-block">
            </div>
            <a href="/campgrounds"> Go back to list all campgrounds </a>
        </form>
    </div>
    
    
</div>

<%- include("../partials/footer") %>