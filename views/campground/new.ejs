<%- include("../partials/header") %>

<div class="container">
    
    <h1 class="text-center mt-5">Create a new Campground</h1>
    <div class="mt-3 mx-auto" style="width:30%">
        <form  action="/campgrounds" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="camp name">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="price" min=0.1 step=0.1>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image url">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="description">
            </div>
            <div class="form-group ">
                <input type="submit" class="btn btn-primary btn-block">
            </div>
            <a href="/campgrounds"> Go back to list all campgrounds </a>
        </form>
    </div>
    
    
</div>

<%- include("../partials/footer") %>